---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <div
    class="min-h-screen bg-gradient-to-br from-violet-50 via-purple-50 to-indigo-50 p-8"
  >
    <h1
      class="text-6xl text-center mb-16 bg-gradient-to-r from-violet-600 to-purple-600 bg-clip-text text-transparent font-bold"
    >
      TP N4
    </h1>
    <div class="max-w-6xl mx-auto flex flex-col gap-8">
      <div
        class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-violet-100 p-8"
      >
        <h2 class="text-2xl font-light text-center mb-8 text-gray-700">
          Visualisation de données des manchots
        </h2>

        <ul class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <li>
            <a
              href="/simple"
              class="block bg-gradient-to-r from-violet-500 to-purple-500 hover:from-violet-600 hover:to-purple-600 text-white px-8 py-4 rounded-2xl text-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
            >
              Simple
            </a>
          </li>
          <li>
            <a
              href="/simple-penguin"
              class="block bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white px-8 py-4 rounded-2xl text-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
            >
              Simple penguins
            </a>
          </li>
          <li>
            <a
              href="/simple-penguin-filtred"
              class="block bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white px-8 py-4 rounded-2xl text-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
            >
              Simple penguins filtered
            </a>
          </li>
          <li>
            <a
              href="/penguin-multifiltred"
              class="block bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white px-8 py-4 rounded-2xl text-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
            >
              Penguins multi filtered
            </a>
          </li>
        </ul>
      </div>
      <div
        class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-violet-100 p-8"
      >
        <h2 class="text-2xl font-light text-center mb-8 text-gray-700">
          Visualisation de données des Athelètes
        </h2>

        <ul class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <li>
            <a
              href="/simple-olympians"
              class="block bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white px-8 py-4 rounded-2xl text-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
            >
              Simple olympians
            </a>
          </li>
          <li>
            <a
              href="/simple-olympians-filtred"
              class="block bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white px-8 py-4 rounded-2xl text-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
            >
              Simple olympians filtered
            </a>
          </li>
          <li>
            <a
              href="/olympians-multifiltred"
              class="block bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white px-8 py-4 rounded-2xl text-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
            >
              Olympians multi filtered
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
